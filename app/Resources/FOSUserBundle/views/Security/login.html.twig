{% extends 'AvanzuAdminThemeBundle:Security:login.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

	  <div class="form-group has-feedback">
	    <input id="username" name="_username" required="required" type="text" class="form-control" placeholder="user" />
	    <span class="glyphicon glyphicon-user form-control-feedback"></span>
	  </div>
	  
      <div class="form-group has-feedback">
        <input id="password" name="_password" required="required" type="password" class="form-control" placeholder="pass" />
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      
      <div class="row">
        <div class="col-xs-12">
    		<input class="btn btn-danger btn-block btn-flat" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div><!-- /.col -->
      </div>
</form>
{% if error %}
	<div class="alert alert-danger alert-dismissable mt20">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
	    <h4><i class="icon fa fa-ban"></i> {{ error.messageKey|trans(error.messageData, 'security') }}</h4>
	</div>
{% endif %}

{% endblock fos_user_content %}