{% extends '::base.html.twig' %}

{% block page_title %}PersonasHasNodos{% endblock %}
{% block page_subtitle %}Edici√≥n{% endblock %}

{% block botones_accion %}
    <a href="{{ path('personashasnodos') }}" title="Volver" class="btn btn-default"><i class="fa fa-reply"></i></a>
{% endblock %}

{% block page_content %}
<div class="box">
	<div class="box-body">
    
    {{ form_start(form) }}
    	<div class="box-body">
    	{{ form_errors(form) }}
    
	    {% for field in form %}
	    	{% if field.vars.name == 'submit' %}
	    	</div>
			<div class="box-footer">
				{{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
			{% else %}
	    	<div class="form-group">
		    	{{ form_row(field) }}
		    </div>
		    {% endif %}

		{% endfor %}
		</div>
			
	{{ form_end(form) }}
    
	</div>

            
</div>
{% endblock %}

{% block javascripts_inline %}
    <script type="text/javascript">
      $(function () {
      	$('a').tooltip();      
      });
    </script>
{% endblock %}