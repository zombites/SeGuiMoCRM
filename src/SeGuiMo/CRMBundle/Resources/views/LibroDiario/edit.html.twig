{% extends '::base.html.twig' %}

{% block page_title %}LibroDiario{% endblock %}
{% block page_subtitle %}Edición{% endblock %}

{% block botones_accion %}
    <a href="{{ path('librodiario') }}" title="Volver" class="btn btn-default"><i class="fa fa-reply"></i></a>
    <a rol="button" class="btn btn-danger" title="Eliminar" data-toggle="modal" data-target="#modal_delete"><i class="fa fa-close"></i></a>
{% endblock %}

{% block page_content %}

<div class="box">
	<div class="box-body">
	
				
	    {{ form_start(edit_form) }}
    	<div class="box-body">
    	{{ form_errors(edit_form) }}
    
	    {% for field in edit_form %}
	    	{% if field.vars.name == 'submit' %}
	    	</div>
			<div class="box-footer">
				{{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
			{% else %}
	    	<div class="form-group">
		    	{{ form_row(field) }}
		    </div>
		    {% endif %}

		{% endfor %}
		</div>
			
		{{ form_end(edit_form) }}

	</div>

</div>
		
<div class="modal fade modal-danger" id="modal_delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
        <h4 class="modal-title">Borrando registro</h4>
      </div>
      <div class="modal-body">
        <p>Si lo haces, no hay vuelta atrás... :)</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Cancelar</button>
        {{ form_start(delete_form) }}
    	{{ form_errors(delete_form) }}
    
	    {% for field in delete_form %}
	    	{% if field.vars.name == 'submit' %}
				{{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-outline'}}) }}
				
			{% else %}
		    	{{ form_row(field) }}
		    	
		    {% endif %}

		{% endfor %}
			
		{{ form_end(delete_form) }}
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

    
{% endblock %}

{% block javascripts_inline %}
    <script type="text/javascript">
      $(function () {
      	$('a').tooltip();      
      });
    </script>
{% endblock %}